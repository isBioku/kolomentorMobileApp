<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="226dp"
        android:layout_height="72dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#FFFFFF"
        android:ellipsize="start"
        android:text="@string/menteeRegisterBtn"
        android:textColor="#800020"
        android:textSize="14sp"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511"
        app:strokeColor="#800020"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="226dp"
        android:layout_height="72dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#800020"
        android:text="@string/mentorRegisterBtn"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/welcomeText2"
        android:layout_width="112dp"
        android:layout_height="23dp"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:fontFamily="sans-serif-black"
        android:text="@string/welcometext"
        android:textColor="#800020"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/kolomentorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/kolomentorText"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/kolomentor"
        android:textColor="#800020"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="@string/loginTextBtn"
        android:textColor="#800020"
        android:textColorHighlight="#6E0202"
        android:textColorLink="#800020"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintVertical_bias="0.3" />

    <View
        android:id="@+id/view2"
        android:layout_width="296dp"
        android:layout_height="350dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-75dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_kolomentor_shape"
        app:layout_constraintBottom_toTopOf="@+id/welcomeText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="259dp"
        android:layout_marginStart="-210dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/kolomentorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pvodza01"
        app:tint="#C68080" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="424dp"
        android:layout_height="298dp"
        android:layout_marginStart="-130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6dp"
        app:tint="#F8F4F4"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/kolomentorText"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kolomentorText"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_pvodza01" />

</androidx.constraintlayout.widget.ConstraintLayout>